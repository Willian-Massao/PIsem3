<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>agendamento</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <main>
      <div class="container">
        <h1>Cadastro</h1>
        <p><%= errormensage %></p>
        <form action="/agendamento" method="post">
          <% results.forEach(user => {if(user.id == myid ){ %>
            <% if(user.Job == "secretary"){ %>
                <div class="listbox" id="secretary" style="visibility: visible;">
                  <label for="secretary">Secretaria:</label>
                  <select name="secretary" id="listbox">
                    <% results.forEach(user => { %>
                      <% if(user.Job == "secretary"){ %>
                        <option value="<%= user.id %>"> <%= user.Name %> </option>  
                      <% } %>
                    <% }) %>
                  </select>
                </div>
              <% } %>
            <% } %>
          <% }); %>
          <div class="listbox">
            <label for="medic">Medico:</label>
            <select name="medic" id="listbox">
              <% results.forEach(user => { %>
                <% if(user.Job == "medic"){ %>
                  <option value="<%= user.id %>"> <%= user.Name %> </option>  
                <% } %>
              <% }) %>
            </select>
          </div>
          <div class="listbox">
            <label for="patient">Paciente:</label>
            <select name="patient" id="patient">
              <% results.forEach(user => { %>
                <% if(user.Job == "pacient"){ %>
                  <option value="<%= user.id %>"> <%= user.Name %> </option>  
                <% } %>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="room">Sala:</label>
            <input type="text" id="room" name="room">
          </div>
          <div class="form-group">
            <label for="date">Data:</label>
            <input type="date" id="date" name="date">
          </div>
          <div class="form-group">
            <label for="time">Horario:</label>
            <input type="time" name="time" id="time">
          </div>

          <button type="submit">Criar agendamento</button>
        </form>
      </div>
    </main>
  </body>
</html>