<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Cadastro</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <main>
      <div class="container">
        <h1>Cadastro</h1>
        <form action="/register" method="post">
          <div class="form-group">
            <label for="name">Nome:</label>
            <input type="text" id="name" name="name">
          </div>
          <div class="form-group">
            <label for="email">Login:</label>
            <input type="text" id="email" name="email">
          </div>
          <div class="form-group">
            <label for="password">Senha:</label>
            <input type="password" id="password" name="password">
          </div>
          <div class="form-group">
            <label for="address">Endereço:</label>
            <input type="text" id="address" name="address">
          </div>
          <div class="form-group">
              <label for="bornDate">Data de Nascimento:</label>
              <input type="date" id="bornDate" name="bornDate">
          </div>
          <div class="form-group">
            <label for="cpf">CPF:</label>
            <input type="text" id="cpf" name="cpf">
          </div>
          <div class="form-group">
            <label for="rg">RG:</label>
            <input type="text" id="rg" name="rg">
          </div>
          <div class="form-group" hidden>
            <label for="crm">CRM:</label>
            <input type="text" id="crm" name="crm">
          </div>
          <div class="form-group" hidden>
            <label for="specialization">Especialização:</label>
            <input type="text" id="specialization" name="specialization">
          </div>
          <div class="form-group">
              <label for="has_crm">é medico?</label>
              <input type="checkbox" id="has_crm" name="has_crm">
            </div>
          <button type="submit">Cadastrar</button>
        </form>
      </div>
      <script>
          const has_crm = document.querySelector('#has_crm');
          const crm = document.querySelector('#crm');
          const specialization = document.querySelector('#specialization');
          let container = document.getElementsByClassName("container")
          has_crm.addEventListener('change', () => {
              if (has_crm.checked) {
              crm.parentElement.hidden = false;
              specialization.parentElement.hidden = false;
              } else {
              crm.parentElement.hidden = true;
              specialization.parentElement.hidden = true;
              }
          });
      </script>
    </main>
  </body>
</html>